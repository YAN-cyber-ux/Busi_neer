<div class="col-sm-12 col-lg-4 mb-3">
  <div id="essay_question_answer-id-<%= essay_question_answer.id %>">
    <div class="card">
      <%= image_tag 'board_placeholder.png', class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
        <%= link_to essay_question_answer.title, essay_question_answer_path(essay_question_answer) %>
        </h4>
        <% if current_user.own?(essay_question_answer) %>
        <%= render 'crud_menus', essay_question_answer: essay_question_answer %>
        <% else %>
        <%= render 'favorite_button', essay_question_answer: essay_question_answer %>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= essay_question_answer.user.decorate.nickname %>
          </li>
          <li class="list-inline-item">
            <%= l essay_question_answer.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= essay_question_answer.body %></p>
      </div>
    </div>
  </div>
</div>