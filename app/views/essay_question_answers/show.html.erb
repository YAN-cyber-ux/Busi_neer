<% provide(:title, @essay_question_answer.title) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @essay_question_answer.title %></h3>
              <%= render 'crud_menus', essay_question_answer: @essay_question_answer %>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @essay_question_answer.user.decorate.nickname %></li>
                <li class="list-inline-item"><%= l @essay_question_answer.created_at, format: :long  %></li>
              </ul>
            </div>
          </div>
            <%= simple_format(@essay_question_answer.body) %>
        </div>
      </article>
    </div>
  </div>
</div>
